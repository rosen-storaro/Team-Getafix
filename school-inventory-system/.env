# School Inventory Management System Environment Configuration

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=inventory_user
DB_PASSWORD=inventory_pass123

# Database Names
AUTH_DB_NAME=auth_db
INVENTORY_DB_NAME=inventory_db
REPORTS_DB_NAME=reports_db

# Application Configuration
APP_NAME="School Inventory Management System"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
CSRF_TOKEN_NAME=csrf_token
SESSION_LIFETIME=3600

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
UPLOAD_PATH=storage/uploads

# QR Code Configuration
QR_CODE_SIZE=300
QR_CODE_DPI=150
QR_CODE_PATH=storage/qrcodes

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Email Configuration (Optional)
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@school.edu
MAIL_FROM_NAME="School Inventory System"

# System Settings
DEFAULT_TIMEZONE=UTC
LOG_LEVEL=error
LOG_PATH=logs/app.log

